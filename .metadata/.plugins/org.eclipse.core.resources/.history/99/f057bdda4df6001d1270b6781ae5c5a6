package entities;

import javafx.scene.image.Image;
import utilz.Constants.EnemyConstant.*;

public class Enemy extends Entity{
	Image[] EnemyAnimation = new Image[5];
	Image idle = new Image(getClass().getResourceAsStream("/e_idle.gif"));
	Image attack= new Image(getClass().getResourceAsStream("/e_attack.gif"));;
	Image run = new Image(getClass().getResourceAsStream("/e_run.gif"));
	Image take_hit = new Image(getClass().getResourceAsStream("/e_Take Hit.gif"));
	Image death = new Image(getClass().getResourceAsStream("/e_death.gif"));

	public Enemy(double x, double y, int width, int height) {
		super(x,y,width,height);
		EnemyAnimation[IDLE] = new Image(getClass().getResourceAsStream("/e_idle.gif"));

	}
	public void loadAnimations() {
	}
}
